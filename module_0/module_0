import random
count = 1                             # счетчик попыток
number = random.randint(1, 100)       # загадываем рандомное число
min_number = 1                        # минимальное число диапазона
max_number = 100                      # максимальное число диапазона

print ("Загадано число от 1 до 100")

predict = (min_number + max_number)/2 # медиана между максимальным и минимальным числом диапазона

while number != predict:                             # если не угадали число
    count+=1                                         # прибавляем к счетчику попыток единицу
    if number > predict:                             # если число больше догадки
        min_number = predict + 1                     # поднимаем нижнюю границу диапазона до значенея догадки +1
        predict = int((min_number + max_number)/2)   # присваиваем новой догадке значение медианы обновленного диапазона
    elif number < predict:                           # если число меньше догадки
        max_number = predict - 1                     # снижаем верхнюю границу диапазона на значенеи догадки -1
        predict = int((min_number + max_number)/2)   # присваиваем новой догадке значение медианы обновленного диапазона
    else:
        break                                        # если угадали число, то останавливаем цикл    

print('Это {}, его удалось отгадать с {} попыток'.format(int(predict), count))    # Результат работы алгоритма